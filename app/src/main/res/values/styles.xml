<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnBackground">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextInputLayoutStyle.HintText</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextInputLayoutStyle.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
    </style>

    <style name="LightTextStyle">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="maxLines">2</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>

    <style name="CityTitleStyle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>

    <style name="CityTempStyle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>

    <style name="NormalTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.02</item>
        <item name="android:textAlignment" tools:ignore="NewApi">center</item>
    </style>
</resources>